<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
    </appender>
    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.springframework.boot.SpringApplication" level="INFO"/>
</configuration>